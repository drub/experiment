#! /bin/bash

# Search for "Action::" at the beginning of line.
# Allows for adding "No " in front of "Action::" with no match.
#
#
echo
echo
echo "++++ Work: journal_work.txt ++++++++++++++++++++++++"
grep -in '^Action::' /Users/thedrub/sync_synology/doc/journal/work/journal_work.txt | grep -iv Done:

