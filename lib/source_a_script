#!/bin/bash

printf "%s\n" "++ Main script"

printf "%s\n" "++ Source the script ..."
source ${HOME}/bin/lib/dashline

printf "%s\n" "++ Use the sourced script ..."
printf "%s\n" "++ by printing a line; 60 equals."

DashLine 60 "="

printf "%s\n" "++ by printing a line; 70 minus."

DashLine 70 "-"

printf "%s\n"
printf "%s\n"
