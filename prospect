#! /bin/bash

entryVerStr="1.2"

dayStr=$(date "+%a")
dateStr=$(date "+%Y-%m-%d")
timeStr=$(date "+%H:%M:%S")

cat << EOF

---------------- Begin Prospect $entryVerStr
Title or Ref #:: 
-----------------------------------
Employer or Bus name:: 
How:: Website, Email, Phone, Mail, In person, Fax
Type:: Application, Interview, Inquiry
Address:: 
City:: 
State:: 
Zip:: 
Website or email:: 
Phone:: 
Date of contact:: $dateStr
Date entered:: 2023-
Note:: 
--------------- End Prospect $entryVerStr

EOF

# ----------------------------------------------------------------------
